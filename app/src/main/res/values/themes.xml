<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarinaSpudic_IAZMU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.MarinaSpudic_IAZMU">
        <item name="android:padding">@dimen/splashPadding</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColor">@color/lightSkin</item>
        <item name="android:colorBackground">@color/black</item>

    </style>

</resources>